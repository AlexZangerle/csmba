
import "https://raw.githubusercontent.com/CollaborativeStateMachines/Cirrina/develop/src/main/resources/pkl/CollaborativeStateMachineDescription.pkl" as CSM
import "https://raw.githubusercontent.com/AlexZangerle/csmba/main/pkls/events.pkl" as Events
import "https://raw.githubusercontent.com/AlexZangerle/csmba/main/pkls/variables.pkl" as Vars
// This module contains actions for the energyManagement SM


// Raise to deactivate energy saving
aRaiseDeactiveEnergySaving = new CSM.RaiseActionDescription {
    event {
        name = Events.eDeactivateEnergySaving
        channel = "global"
    }
}

// Raise to start detecting energy prices
aRaiseStartDetectingEnergy = new CSM.RaiseActionDescription {
    event {
        name = Events.eStartEnergyCheck
        channel = "internal"
    }
}

// Raise to activate energy saving
aRaiseEnergySaving = new CSM.RaiseActionDescription {
    event {
        name = Events.eActivateEnergySaving
        channel = "global"
    }
}

// Raise to activate drastic energy saving
aRaiseDrasticEnergySaving = new CSM.RaiseActionDescription {
    event {
        name = Events.eDrasticEnergySaving
        channel = "global"
    }
}