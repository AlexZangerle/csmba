amends "https://raw.githubusercontent.com/CollaborativeStateMachines/Cirrina/develop/src/main/resources/pkl/CollaborativeStateMachineDescription.pkl"
import "https://raw.githubusercontent.com/CollaborativeStateMachines/Cirrina/develop/src/main/resources/pkl/CollaborativeStateMachineDescription.pkl" as CSM
import "https://raw.githubusercontent.com/AlexZangerle/csmba/main/pkls/events.pkl" as Events
// This module contains actions for the room occupancy SM

// Raise action to start detecting occupancy
aRaiseStartDetectingOccupancy = new CSM.RaiseActionDescription {
    event {
        name = Events.eStartDetectingOccupancy
        channel = "internal"
    }
}

// Raise action when occupancy detection results in occupied
aRaiseOccupancyDetected = new CSM.RaiseActionDescription {
    event {
        name = Events.eOccupancyDetected
        channel = "global"
    }
}

// Raise action when occupancy detection results in vacant
aRaiseOccupancyVacant = new CSM.RaiseActionDescription {
    event {
        name = Events.eOccupancyVacant
        channel = "global"
    }
}

// Raise action when occupancy detection results in transient
aRaiseOccupancyTransient = new CSM.RaiseActionDescription {
    event {
        name = Events.eOccupancyTransient
        channel = "global"
    }
}

// Raise action when occupancy detection took unusually long
aRaiseMaintenance = new CSM.RaiseActionDescription {
    event {
        name = Events.eMaintenanceRequired
        channel = "global"
    }

}
