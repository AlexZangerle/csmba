
import "https://raw.githubusercontent.com/CollaborativeStateMachines/Cirrina/refs/heads/develop/src/main/resources/pkl/csm/Csml.pkl"
import "https://raw.githubusercontent.com/AlexZangerle/csmba/main/pkls/events.pkl" as Events
// This module contains actions for the room occupancy SM

// Raise action to start detecting occupancy
aRaiseStartDetectingOccupancy = new Csml.RaiseActionDescription {
    event {
        name = Events.eStartDetectingOccupancy
        channel = "internal"
    }
}

// Raise action when occupancy detection results in occupied
aRaiseOccupancyDetected = new Csml.RaiseActionDescription {
    event {
        name = Events.eOccupancyDetected
        channel = "global"
    }
}

// Raise action when occupancy detection results in vacant
aRaiseOccupancyVacant = new Csml.RaiseActionDescription {
    event {
        name = Events.eOccupancyVacant
        channel = "global"
    }
}

// Raise action when occupancy detection results in transient
aRaiseOccupancyTransient = new Csml.RaiseActionDescription {
    event {
        name = Events.eOccupancyTransient
        channel = "global"
    }
}

// Raise action when occupancy detection took unusually long
aRaiseMaintenance = new Csml.RaiseActionDescription {
    event {
        name = Events.eMaintenanceRequired
        channel = "global"
    }

}

aRaiseStartGasLeakDetection = new Csml.RaiseActionDescription {
    event {
        name = Events.eStartGasLeakDetection
        channel = "internal"
    }
}
