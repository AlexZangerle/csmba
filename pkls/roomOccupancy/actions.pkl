amends "https://raw.githubusercontent.com/UIBK-DPS-DC/Cirrina-Specifications/main/pkl/CollaborativeStateMachineDescription.pkl"
import "https://raw.githubusercontent.com/UIBK-DPS-DC/Cirrina-Specifications/main/pkl/CollaborativeStateMachineDescription.pkl" as CSM
/// This module contains actions for the room occupancy SM

/// Raise action to start detecting occupancy
local aRaiseStartDetectingOccupancy: CSM.RaiseActionDescription = new {
    event {
        name = eStartDetectingOccupancy
        channel = "internal"
    }
}

/// Raise action when occupancy detection results in occupied
local aRaiseOccupancyDetected: CSM.RaiseActionDescription = new {
    event {
        name = eOccupancyDetected
        channel = "global"
    }
}

/// Raise action when occupancy detection results in vacant
local aRaiseOccupancyVacant: CSM.RaiseActionDescription = new {
    event {
        name = eOccupancyVacant
        channel = "global"
    }
}

/// Raise action when occupancy detection results in transient
local aRaiseOccupancyTransient: CSM.RaiseActionDescription = new {
    event {
        name = eOccupancyTransient
        channel = "global"
    }
}

/// Raise action when occupancy detection took unusually long
local aRaiseMaintenance: CSM.RaiseActionDescription = new {
    event {
        name = eMaintenanceRequired
        channel = "global"
    }
}