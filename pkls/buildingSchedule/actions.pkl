import "https://raw.githubusercontent.com/AlexZangerle/csmba/main/pkls/events.pkl" as Events
import "https://raw.githubusercontent.com/AlexZangerle/csmba/main/pkls/variables.pkl" as Vars
import "https://raw.githubusercontent.com/CollaborativeStateMachines/Cirrina/refs/heads/develop/src/main/resources/pkl/csm/Csml.pkl"


// This module contains actions for the buildingScheduleSM and roomScheduleSM

// Raise to signal entry of business hours
aRaiseEnterBusinessHours = new Csml.RaiseActionDescription { event { name = Events.eEnterBusinessHours channel = "global" } }

// Raise to start a schedule check
aRaiseStartScheduleCheck = new Csml.RaiseActionDescription { event { name = Events.eStartScheduleCheck channel = "internal" } }

// Raise to signal entry of after hours
aRaiseEnterAfterHours = new Csml.RaiseActionDescription { event { name = Events.eEnterAfterHoursMode channel = "global" } }

// Raise to signal entry of weekend
aRaiseEnterWeekend = new Csml.RaiseActionDescription { event { name = Events.eEnterWeekend channel = "global" } }

// Raise to signify activation of zone
aRaiseZoneActive = new Csml.RaiseActionDescription {
  event {
    name = Events.eZoneActive
    data { new { name = "zoneId" value = Vars.vZoneId } }
    channel = "global"
  }
}

// Raise to signify deactivation of zone
aRaiseZoneInactive = new Csml.RaiseActionDescription {
  event {
    name = Events.eZoneInactive
    data { new { name = "zoneId" value = Vars.vZoneId } }
    channel = "global"
  }
}

// Raise to signify the zone entering a warning state
aRaiseZoneWarning = new Csml.RaiseActionDescription {
  event {
    name = Events.eZoneWarning
    data { new { name = "zoneId" value = Vars.vZoneId } }
    channel = "global"
  }
}

// Raise to put room to inactive
aRaiseShutdownRoom = new Csml.RaiseActionDescription {
  event { name = Events.eShutdownRoom; channel = "internal" }
}

// Raise to recheck override
aRaiseRecheckOverride = new Csml.RaiseActionDescription {
  event { name = Events.eRecheckOverride; channel = "internal" }
}
