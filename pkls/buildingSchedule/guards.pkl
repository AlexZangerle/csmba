import "https://raw.githubusercontent.com/AlexZangerle/csmba/main/pkls/variables.pkl" as Vars
import "https://raw.githubusercontent.com/CollaborativeStateMachines/Cirrina/refs/heads/develop/src/main/resources/pkl/csm/Csml.pkl"
// This module contains all guards for energyManagement SM

// Guard to check if arc fault has been detected
isBusinessHours = new Csml.GuardDescription {
  expression = "\(Vars.vCurrentScheduleMode) == 'businessHours'"
}

isAfterHours = new Csml.GuardDescription {
  expression = "\(Vars.vCurrentScheduleMode) == 'afterHours'"
}

isWeekend = new Csml.GuardDescription {
  expression = "\(Vars.vCurrentScheduleMode) == 'weekendClosed'"
}

requestedStay = new Csml.GuardDescription {
  expression = "$zoneId == \(Vars.vZoneId)"
}

userLeftZone = new Csml.GuardDescription {
  expression = "$zoneId == \(Vars.vZoneId)"
}
