
import "https://raw.githubusercontent.com/CollaborativeStateMachines/Cirrina/develop/src/main/resources/pkl/CollaborativeStateMachineDescription.pkl" as CSM
import "https://raw.githubusercontent.com/AlexZangerle/csmba/main/pkls/events.pkl" as Events
// This module contains actions for the gasSafety SM

// Raise to start gas leak detection
aRaiseStartGasLeakDetection = new CSM.RaiseActionDescription {
    event {
        name = Events.eStartGasLeakDetection
        channel = "internal"
    }
}

// Raise once a gas leak has been detected
// includes location of gas leak as payload
aRaiseGasLeakDetected = new CSM.RaiseActionDescription {
    event {
        name = Events.eGasLeakDetected
        data {
            new {
                name = "gasLeakLocation"
                value = Vars.vGasLeakLocation

            }
        }
        channel = "global"
    }
}
