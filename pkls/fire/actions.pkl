amends "https://raw.githubusercontent.com/CollaborativeStateMachines/Cirrina/develop/src/main/resources/pkl/CollaborativeStateMachineDescription.pkl"
import "https://raw.githubusercontent.com/CollaborativeStateMachines/Cirrina/develop/src/main/resources/pkl/CollaborativeStateMachineDescription.pkl" as CSM
import "https://raw.githubusercontent.com/AlexZangerle/csmba/main/pkls/events.pkl" as Events
// This module contains actions for the fireDetection SM


// Raise to start detecting fire
aRaiseStartDetectingFire = new CSM.RaiseActionDescription{
    event {
        name = Events.eStartDetectingFire
        channel = "internal"
    }
}

// Raised to trigger fire alarm or smoke alert
aRaiseFireAlarm = new CSM.RaiseActionDescription{
    event {
        name = Events.eFireAlarm
        channel = "global"
    }
}

aRaiseSmokeAlert = new CSM.RaiseActionDescription {
    event {
        name = Events.eSmokeAlert
        channel = "global"
    }
}