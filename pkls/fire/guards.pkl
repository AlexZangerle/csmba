// This module contains all guards for fireDetection SM

// Guard to check if fire or smoke has been detected
fireDetectedGuard = new Csml.GuardDescription {
    expression = "\(Vars.vFireDetectionResult) == 'fire'"
}
smokeDetectedGuard = new Csml.GuardDescription {
    expression = "\(Vars.vFireDetectionResult) == 'smoke'"
}